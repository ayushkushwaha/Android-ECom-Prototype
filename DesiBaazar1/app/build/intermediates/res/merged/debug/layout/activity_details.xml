<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="507dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="in.sli.desibaazar.Details" >

        <TextView
            android:id="@+id/Name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:text="@string/hello_world"
            android:textStyle="bold"
            android:textSize="20sp" 
            android:textColor="#01579b"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relativeLayout1"
            android:layout_below="@+id/Name"
            
            android:minHeight="350dp"
            android:src="@drawable/img3" />

        
        <TextView
            android:id="@+id/Size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Price"
            android:layout_below="@+id/QTY"
            android:layout_marginBottom="23dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_below="@+id/Size"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="TextView"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/Price"
            android:layout_centerHorizontal="true"
            android:text="Add To Cart +" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/QTY"
            android:layout_alignBottom="@+id/QTY"
            android:layout_alignRight="@+id/button1"
            android:layout_marginRight="52dp"
            android:text="Quantity - "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/QTY"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="67dp"
            android:ems="10"
            android:hint="Qty" >

            <requestFocus />
        </EditText>

    </RelativeLayout>

</ScrollView><!-- From: file:/E:/StudioProjects/DesiBaazar1/app/src/main/res/layout/activity_details.xml -->